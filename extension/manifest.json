{
    "name": "BSaver",
    "version": "1",
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "random201709301147@buggyjef.uk"
        }
    },
    "content_scripts" : [ {
		"js" : [
			"ContentScript.js"
		],
      "matches" : [
        "file:///*"
      ],
		"run_at" : "document_start"
	} ],
    "background": {
        "scripts": ["background.js"]
    },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
     "short_name": "TWRouter",
    "permissions": [
		"storage" ,
        "downloads",
        "<all_urls>"
    ],
      "web_accessible_resources": ["script.js"]
}
